<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!-- Cấu hình servlet -->
  <servlet>
    <servlet-name>TrangChuServlet</servlet-name>
    <servlet-class>com.controller.TrangChuServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TrangChuServlet</servlet-name>
    <url-pattern>/trangchu</url-pattern>
  </servlet-mapping>

  <!-- Gọi servlet đầu tiên khi truy cập http://localhost:8080/yourapp -->
  <welcome-file-list>
    <welcome-file>trangchu</welcome-file>
  </welcome-file-list>
</web-app>
